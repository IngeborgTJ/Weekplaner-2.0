<h1>List of Messages:</h1>

<table>
  <thead>
    <tr>
      <th>New message:</th>
      <th>Priority:</th>
      <th>Date:</th>
      <th>Status:</th>
      <th colspan="3"></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @planers.each do |planer| %>
      <tr>
        <td><%= planer.new_plan %></td>
        <td><%= planer.priority %></td>
        <td><%= planer.date %></td>
        <td><%= planer.status %></td>
        <td><%= link_to 'Show', planer %></td>
        <td><%= link_to 'Edit', edit_planer_path(planer) %></td>
        <td><%= link_to 'Delete', planer, method: :delete, data: { confirm: 'Are you sure that you want to delete this message?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

